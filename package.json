{
  "name": "mnsc-monorepo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "run-s lint:*",
    "lint:biome": "biome check ./",
    "lint:packages": "turbo run lint",
    "format": "biome check --write ./",
    "format-fix": "biome check --write --unsafe ./",
    "release": "run-s build release:*",
    "release:publish": "bash ./scripts/publish-ci.sh",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@types/node": "^24.3.0",
    "npm-run-all2": "^8.0.4",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.14.0"
}
